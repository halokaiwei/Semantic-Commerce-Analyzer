FROM python:3.10-slim

# 安装 UC 和 Chrome 所需系统依赖
RUN apt-get update && apt-get install -y \
    wget curl unzip gnupg ca-certificates \
    fonts-liberation libappindicator3-1 \
    libasound2 libatk-bridge2.0-0 libatk1.0-0 \
    libcups2 libdbus-1-3 libgdk-pixbuf2.0-0 \
    libnspr4 libnss3 libx11-xcb1 libxcomposite1 \
    libxdamage1 libxrandr2 xdg-utils \
    libu2f-udev libvulkan1 libglib2.0-0 \
    libgtk-3-0 libxss1 libgconf-2-4 \
    && apt-get clean && rm -rf /var/lib/apt/lists/*

# 安装 Google Chrome（稳定官方版）
RUN wget -q -O - https://dl.google.com/linux/linux_signing_key.pub | apt-key add - && \
    echo "deb [arch=amd64] http://dl.google.com/linux/chrome/deb/ stable main" > /etc/apt/sources.list.d/google-chrome.list && \
    apt-get update && apt-get install -y google-chrome-stable && \
    rm -rf /var/lib/apt/lists/*

# 设置工作目录
WORKDIR /app

# 拷贝代码和 requirements.txt
COPY . /app

# 安装 Python 依赖（包含 undetected-chromedriver）
RUN pip install --upgrade pip && pip install -r requirements.txt

# 默认执行
CMD ["python", "carousell_crawler.py"]
